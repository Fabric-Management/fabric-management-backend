# =============================================================================
# FABRIC MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES
# =============================================================================
# Extracted from existing application.yml configurations

# =============================================================================
# SERVICE PORTS (FROM EXISTING APPLICATION.YML FILES)
# =============================================================================
AUTH_SERVICE_PORT=8081
USER_SERVICE_PORT=8082
COMPANY_SERVICE_PORT=8083
CONTACT_SERVICE_PORT=8084

# =============================================================================
# DATABASE CONFIGURATION (FROM EXISTING CONFIGS)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=fabric_management
POSTGRES_USER=fabric_user
POSTGRES_PASSWORD=fabric_password

# =============================================================================
# INFRASTRUCTURE SERVICES
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
ZOOKEEPER_PORT=2181

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Database
POSTGRES_DOCKER_PORT=5433
REDIS_DOCKER_PORT=6379

# Kafka & Zookeeper
KAFKA_DOCKER_PORT=9092
ZOOKEEPER_DOCKER_PORT=2181

# =============================================================================
# SPRING PROFILES
# =============================================================================
SPRING_PROFILES_ACTIVE=local

# =============================================================================
# JVM CONFIGURATION
# =============================================================================
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC

