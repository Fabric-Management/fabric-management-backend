# =============================================================================
# FABRIC MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in actual values
# Never commit .env file to version control!

# =============================================================================
# SPRING PROFILES
# =============================================================================
# Options: local, docker, development, production
SPRING_PROFILES_ACTIVE=local

# =============================================================================
# SERVICE PORTS
# =============================================================================
USER_SERVICE_PORT=8081
CONTACT_SERVICE_PORT=8082
COMPANY_SERVICE_PORT=8083

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development: localhost
# For docker: postgres (service name in docker-compose)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=fabric_management
POSTGRES_USER=fabric_user
POSTGRES_PASSWORD=change_me_in_production

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# For local development: localhost
# For docker: redis (service name in docker-compose)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
# For local development: localhost:9092
# For docker: kafka:9093 (service name and internal port)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Zookeeper (usually not needed in application code)
ZOOKEEPER_HOST=localhost
ZOOKEEPER_PORT=2181

# =============================================================================
# JWT SECURITY CONFIGURATION
# =============================================================================
# IMPORTANT: Generate a strong secret key for production!
# Minimum 256 bits (32 characters) recommended
JWT_SECRET=your-256-bit-secret-key-here-change-in-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# =============================================================================
# SERVICE DISCOVERY (Inter-service communication)
# =============================================================================
# For local development: localhost with ports
# For docker: service names from docker-compose
USER_SERVICE_URL=http://localhost:8081
CONTACT_SERVICE_URL=http://localhost:8082
COMPANY_SERVICE_URL=http://localhost:8083

# =============================================================================
# DOCKER EXTERNAL PORTS
# =============================================================================
# These ports are exposed to host machine
POSTGRES_DOCKER_PORT=5433
REDIS_DOCKER_PORT=6379
KAFKA_DOCKER_PORT=9092
ZOOKEEPER_DOCKER_PORT=2181

# =============================================================================
# MONITORING & OBSERVABILITY (Optional)
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =============================================================================
# JVM CONFIGURATION
# =============================================================================
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Options: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
